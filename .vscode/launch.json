  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch TypeScript",
      "type": "pwa-node",
      "request": "launch",
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "dotenv/config",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["./src/index.ts"],
      "cwd": "${workspaceFolder}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
